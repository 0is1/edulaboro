@import 'nib'
global-reset()

// Stylesheet file for layout structure. Logo, header and footer etc.
// No colors or widget specific rules here.

html
  height 100%
  width 100%

body
  font 100%/1.5 "Helvetica Neue",Helvetica, "Lucida Grande", tahoma, arial, sans-serif

h1
  font-size 200%

h2
  font-size 150%

.display_none
  display none !important

.display_block
  display block !important

.container
  margin 0 auto
  width 100%
  h1.site-title
    font-size 300%
    margin 0 5%

.topmenu
  height 50px
  width 100%

  button
    margin .5em .5em .5em 5%

.new-document-container, .edit-document-container
  left 5%
  margin 1em auto
  padding 2em
  position fixed
  top 5%
  width 75%
  z-index 9999
  .wysihtml5-form textarea
    height 350px
  .wysihtml5-form textarea, .wysihtml5-toolbar
    display block
    margin 0 auto
    width 100%

  .form-buttons
    margin .5em 0 0

.all-documents
  margin 0 auto
  width 90%
  .document-info
    display block
    font-size 80%
    margin 1em 0 0
    text-transform uppercase

  ul
    display block
    margin 1em 0

    li.document-list-element
      margin 1em 0 0
      padding .25em .25em 1em
      width auto
      .document-body
        margin-bottom 1em
      button
        padding-left 2em
        position relative
        i
          left 10%
          position absolute
          top 25%

.document
  left 5%
  height auto
  margin 0
  padding 2.5%
  position fixed
  top 5%
  width 85%
  z-index 9999
  button
    margin-top 1em

  .close-document-btn
    border-radius 3em
    height 30px
    margin 0
    position absolute
    right -1.25em
    top -1.25em
    width 30px
    .icon-remove
      left 25%
      position absolute
      top 25%

.all-documents, .document
  .document-body p
    margin-bottom 0.5em